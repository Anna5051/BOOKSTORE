<Page x:Class="WpfApp1.Pages.RegiastrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d"
      Title="RegiastrationPage" Height="730" Width="772">

    <Grid Height="1200">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="787*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Pages/ingmar-h-H0zARRQe5Oc-unsplash.jpg" RenderTransformOrigin="0.5,0.5" Height="NaN" Width="NaN" Margin="-103,-158,-44,336" Grid.ColumnSpan="2">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.069"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="25" Margin="193,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="414"/>
        <TextBox x:Name="tbPassword" HorizontalAlignment="Left" Height="25" Margin="193,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="414"/>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="193,45,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="130" FontFamily="Bahnschrift SemiLight Condensed" FontSize="18" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="193,127,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="130" FontFamily="Bahnschrift SemiLight Condensed" FontSize="18" Foreground="White"/>
        <Rectangle HorizontalAlignment="Left" Height="72" Margin="193,378,0,0" Stroke="White" VerticalAlignment="Top" Width="414"/>
        <RadioButton Content="Заказчик" HorizontalAlignment="Center" Height="23" Margin="0,391,0,0" VerticalAlignment="Top" Width="364" TextBlock.FontFamily="Bahnschrift SemiLight Condensed" TextBlock.FontSize="18" Foreground="White"/>
        <RadioButton Content="Исполнитель" HorizontalAlignment="Left" Height="23" Margin="218,427,0,0" VerticalAlignment="Top" Width="364" TextBlock.FontFamily="Bahnschrift SemiLight Condensed" TextBlock.FontSize="18" Foreground="White"/>
        <Button Content="Выйти" HorizontalAlignment="Left" Height="36" Margin="193,513,0,0" VerticalAlignment="Top" Width="140" Background="#FF791A1A" Foreground="White" FontFamily="Bahnschrift SemiLight Condensed" FontSize="16" BorderBrush="#FF5F0F30"/>
        <Button Content="Зарегистрироваться" HorizontalAlignment="Left" Height="36" Margin="467,513,0,0" VerticalAlignment="Top" Width="140" Background="#FF136D15" Foreground="White" FontFamily="Bahnschrift SemiLight Condensed" FontSize="16" BorderBrush="#FF092035"/>
        <PasswordBox x:Name="tbPAsswordAgain" HorizontalAlignment="Left" Height="31" Margin="193,225,0,0" VerticalAlignment="Top" Width="408"/>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="193,198,0,0" TextWrapping="Wrap" Text="Повторите пароль" VerticalAlignment="Top" Width="130" FontFamily="Bahnschrift SemiLight Condensed" FontSize="18" Foreground="White"/>
        <DatePicker x:Name="dateBirth" HorizontalAlignment="Left" Height="30" Margin="193,313,0,0" VerticalAlignment="Top" Width="408" Background="#FF258054" TextBlock.FontSize="18" TextBlock.FontFamily="Bahnschrift SemiLight Condensed"/>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="193,283,0,0" TextWrapping="Wrap" Text="Выберите дату рождения" VerticalAlignment="Top" Width="130" FontFamily="Bahnschrift SemiLight Condensed" FontSize="18" Foreground="White"/>
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="445" Margin="152,30,0,0" VerticalAlignment="Top" Width="496">
            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFCE4141" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
        </Border>

    </Grid>
</Page>
